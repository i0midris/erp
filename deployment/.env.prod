# ERP System Production Environment Configuration
# IMPORTANT: Never commit this file to version control

# Database Configuration
DB_HOST=erp-db
DB_PORT=5432
DB_NAME=erp_prod
DB_USER=erp_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_SSL_MODE=require
DB_CONNECTION_TIMEOUT=30

# Redis Configuration
REDIS_HOST=erp-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_STRONG_REDIS_PASSWORD
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=30

# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
API_BASE_URL=https://api.yourdomain.com
WEB_BASE_URL=https://yourdomain.com

# Security Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_SECRET_64_CHARS_MINIMUM
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=CHANGE_THIS_TO_A_32_CHARACTER_ENCRYPTION_KEY
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_SECRET
SESSION_TIMEOUT=3600000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv
UPLOAD_DESTINATION=/app/uploads

# Email Configuration
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=your-email@yourdomain.com
EMAIL_FROM_NAME=ERP System

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_STRONG_GRAFANA_PASSWORD

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=/backups
BACKUP_COMPRESSION=gzip

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/erp.crt
SSL_KEY_PATH=/etc/ssl/private/erp.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs
API_DOCS_TITLE=ERP System API
API_DOCS_VERSION=1.0.0
API_DOCS_DESCRIPTION=Enterprise Resource Planning System API

# Feature Flags
FEATURE_PURCHASE_MANAGEMENT=true
FEATURE_PRODUCT_MANAGEMENT=true
FEATURE_INVENTORY_MANAGEMENT=true
FEATURE_SALES_MANAGEMENT=true
FEATURE_FINANCIAL_REPORTING=true
FEATURE_USER_MANAGEMENT=true
FEATURE_AUDIT_LOGGING=true

# Third-party Integrations
PAYMENT_GATEWAY_ENABLED=false
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET=

SMS_GATEWAY_ENABLED=false
SMS_GATEWAY_API_KEY=
SMS_GATEWAY_SENDER_ID=

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true
GZIP_LEVEL=6

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NOTIFICATION_EMAIL=alerts@yourdomain.com
ADMIN_SUPPORT_EMAIL=support@yourdomain.com

# Legal and Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
BACKUP_ENCRYPTION_ENABLED=true

# Development Overrides (only for debugging)
DEBUG_MODE=false
LOG_QUERIES=false
ENABLE_SWAGGER=true